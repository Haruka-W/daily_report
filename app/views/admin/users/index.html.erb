<h1>社員一覧ページ</h1>
<table class="table">
  <thead>
    <tr>
      <th>社員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>在籍状況</th>
      <th>管理者権限</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.is_active %></td>
      <td>
        <%if user.admin == true %>
          <p>管理者</p>
        <% else %>
          <p>一般社員</p>
        <% end %>
      </td>
      <td>
        <%= link_to "詳細", user_path(user.id), class: "btn btn-info" %>
        <%= link_to "変更", edit_user_path(user), class: "btn btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>