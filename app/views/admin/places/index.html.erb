<h1>現場一覧・登録ページ</h1>

<h3>現場の新規登録</h3>
<div class="new_place_field">
<%= form_with model: @place, url: admin_places_path, local: true do |f| %>
<%= f.label "現場名" %>
<%= f.text_field :name %>
<%= f.submit "追加する", class: "btn btn-primary" %>
<% end %>
</div>

<h3>登録済み現場一覧</h3>
<table class="table table-hover table-inverse">
	<thead>
    <tr>
      <th>現場名</th>
      <th>プロジェクト数</th>
      <th colspan = "1"></th>
    </tr>
  </thead>
  <tbody>
  <% @places.each do |place| %>
    <tr>
      <td><%= place.name %></td>
      <td>プロジェクトのカウント</td>
      <td><%= link_to "編集する", edit_admin_place_path(place.id), class: "btn btn-success" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
